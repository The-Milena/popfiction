<div class="navbar navbar-expand-sm navbar-light navbar-lewagon ">
  <div class="container-fluid">
    <div class="div navbar-brand d-flex">
      <%= link_to root_path do %>
        <%=image_tag("PopFiction.png", alt: "Example Image")%>
      <% end %>
      <div class="fw-bold mt-2">PopFiction</div>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <a class="nav-link" href= "http://127.0.0.1:3000/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Messages</a>
          </li>
          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <%=cl_image_tag current_user.photo.key ,
                           alt: "Example Image",
                           class: "avatar dropdown-toggle",
                           id: "navbarDropdown",
                           aria: {
                             haspopup: true,
                             expanded: false
                           },
                           data: {
                             bs_toggle: "dropdown"
                           } %>
            <% else %>
              <%=image_tag "user.png",
                           alt: "Example Image",
                           class: "avatar dropdown-toggle",
                           id: "navbarDropdown",
                           aria: {
                             haspopup: true,
                             expanded: false
                           },
                           data: {
                             bs_toggle: "dropdown"
                           } %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Action</a>
              <% if user_signed_in? %>
                <%= link_to "Your bookings", dashboard_path, class: "dropdown-item" %>
                <%= link_to "New place", new_place_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
              <% else %>
                <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
                <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
    </div>
  </div>
</div>
