<div class="container mt-5">
  <!-- Titre principal -->
  <h1 class="display-4 mb-3"><%= @place.address %></h1>
  <p class="lead">Hosted by <strong><%= @place.user.first_name %> <%= @place.user.last_name %></strong></p>

  <!-- Section principale -->
  <div class="row">
    <!-- Carrousel d'images -->
    <div class="col-md-8">
      <div id="carouselPlace" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://i.pinimg.com/736x/92/cd/f4/92cdf4cd4d27a3027ccaeb698947b0ed.jpg" class="d-block w-100" alt="Exterior">
          </div>
          <div class="carousel-item">
            <img src="https://i.pinimg.com/736x/dd/78/87/dd7887f9f07529524714711c690f9325.jpg" class="d-block w-100" alt="Living room">
          </div>
          <div class="carousel-item">
            <img src="https://i.pinimg.com/736x/06/72/d7/0672d7ce62064243a90114fa6faddc29.jpg" class="d-block w-100" alt="Kitchen">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselPlace" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselPlace" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <!-- Informations sur la place -->
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title">Details</h4>
          <p><strong>Price per night:</strong> $<%= @place.price %></p>
          <p><strong>Beds:</strong> <%= @place.beds %></p>
          <p><strong>Description:</strong> <%= @place.description %></p>

          <!-- Bouton pour réserver -->
          <%= link_to "Reserve Now", new_place_booking_path(@place), class: "btn btn-primary w-100 mt-3" %>

          <!-- Bouton pour modifier la place -->
          <% if current_user == @place.user %>
            <%= link_to "Edit Place", edit_place_path(@place), class: "btn btn-secondary w-100 mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Section des réservations -->
  <div class="mt-5">
    <h2>Bookings</h2>
    <% if @place.bookings.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Guests</th>
          </tr>
        </thead>
        <tbody>
          <% @place.bookings.each do |booking| %>
            <tr>
              <td><%= booking.date_start.strftime('%d %b %Y') %></td>
              <td><%= booking.date_end.strftime('%d %b %Y') %></td>
              <td><%= booking.nb_of_guests %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No bookings yet for this place.</p>
    <% end %>
  </div>
  <%= link_to "back to places available", places_path, class: "btn btn-primary my-2" %>
</div>
