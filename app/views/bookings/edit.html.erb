<h2>Edit your booking: </h2>
  <%= simple_form_for (@booking) do |f| %>
    <%= f.input :date_start,
    as: :string,
    input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :date_end,
    as: :string,
    input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :nb_of_guests%>
    <%= f.submit "Update",  class: "btn btn-primary"%>
  <% end %>
